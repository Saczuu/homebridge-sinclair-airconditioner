{
  "pluginAlias": "SinclairAirconditioner",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Accessory Name",
        "type": "string",
        "default": "Sinclair AC"
      },
      "host": {
        "title": "Air Conditioner IP Address",
        "type": "string",
        "format": "ipv4"
      },
      "enableDryMode": {
        "title": "Enable DRY Mode (Dehumidification)",
        "type": "boolean",
        "default": true
      },
      "enableFanMode": {
        "title": "Enable FAN Mode (Fan Only)",
        "type": "boolean",
        "default": true
      },
      "pollingInterval": {
        "title": "Polling Interval (seconds)",
        "type": "number",
        "default": 10,
        "minimum": 5,
        "maximum": 60
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false
      }
    },
    "required": ["host"]
  }
}
