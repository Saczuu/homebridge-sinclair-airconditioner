{
  "pluginAlias": "SinclairAirConditioner",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "required": [
      "accessory",
      "host",
      "name",
      "updateInterval"
    ],
    "properties": {
      "accessory": {
        "type": "string",
        "default": "SinclairAirConditioner",
        "description": "Internal accessory type",
        "pattern": "^SinclairAirConditioner$"
      },
      "host": {
        "title": "IP Address",
        "type": "string",
        "format": "ipv4",
        "placeholder": "192.168.1.100",
        "description": "IP address of the air conditioner"
      },
      "name": {
        "title": "HomeKit Name",
        "type": "string",
        "placeholder": "Living Room AC",
        "description": "Name shown in Apple Home"
      },
      "acModel": {
        "title": "Model",
        "type": "string",
        "placeholder": "Gree V2",
        "description": "Air conditioner model identifier"
      },
      "useTargetTempAsCurrent": {
        "title": "Use Target Temperature as Current",
        "type": "boolean",
        "default": false,
        "description": "Use target temperature instead of reported current temperature"
      },
      "acTempSensorShift": {
        "title": "Temperature Sensor Shift",
        "type": "integer",
        "default": 0,
        "description": "Temperature offset applied to sensor readings (Â°C)"
      },
      "updateInterval": {
        "title": "Update Interval (milliseconds)",
        "type": "integer",
        "minimum": 1000,
        "default": 10000,
        "description": "Polling interval for updating device state"
      }
    }
  }
}

